<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

    <item android:bottom="80%"><shape android:shape="rectangle">
        <gradient
            android:angle="270"
            android:startColor="#D1E8FF"
            android:endColor="#00FFFFFF"
            android:type="linear" />
    </shape>
    </item>

    <item android:top="80%"><shape android:shape="rectangle">
        <gradient
            android:angle="90"
            android:startColor="#D1E8FF"
            android:endColor="#00FFFFFF"
            android:type="linear" />
    </shape>
    </item>
</layer-list>