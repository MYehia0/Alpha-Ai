<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.example.alpha_ai.ui.onBoarding.OnBoardingViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_splash_gradient"
        tools:context=".ui.onBoarding.OnBoardingActivity">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.75"
            android:scaleY="0.75"
            android:adjustViewBounds="true"
            android:padding="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guideLine"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/alpha_ai_logo" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.45"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/bg_bottom_sheet_rounded"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideLine">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingHorizontal="25dp"
                android:paddingTop="35dp"
                android:paddingBottom="25dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/correction_with_alpha_ai"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/experience_the_power_of_ai_with_us"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="#757575"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sign_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:backgroundTint="@color/blue"
                    android:elevation="10dp"
                    android:paddingVertical="20dp"
                    android:text="@string/i_need_to_create_an_account"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:onClick="@{() -> vm.navigateToRegister()}"
                    app:cornerRadius="25dp"
                    app:icon="@drawable/ic_arrow_login"
                    app:iconGravity="textEnd"
                    app:iconPadding="10dp"
                    app:iconSize="17dp"
                    app:iconTint="@color/white" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:backgroundTint="@color/white"
                    android:elevation="10dp"
                    android:paddingVertical="20dp"
                    android:onClick="@{() -> vm.navigateToLogin()}"
                    android:text="@string/i_already_have_an_account"
                    android:textAllCaps="false"
                    android:textColor="@color/blue"
                    android:textSize="16sp"
                    app:cornerRadius="25dp"
                    app:strokeColor="@color/blue100"
                    app:strokeWidth="2dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:minHeight="20dp"/>

                <TextView
                    android:id="@+id/tv_terms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/terms_disclaimer"
                    android:textColor="@color/gray"
                    android:textSize="13sp"
                    android:layout_marginHorizontal="32dp"
                    android:lineSpacingExtra="2dp"
                    />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>