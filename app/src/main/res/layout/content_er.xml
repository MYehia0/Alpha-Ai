<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_er"
    tools:context=".ui.tasks.er.ERActivity"
    >

    <data>
        <variable
            name="vm"
            type="com.example.alpha_ai.ui.tasks.er.ERViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/output_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="15dp"
            android:padding="20dp"
            app:cardBackgroundColor="@color/red100"
            app:cardCornerRadius="25dp"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/output_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="5dp"
                android:textColorHint="@color/red"
                app:hintTextColor="@color/red"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                >
                <EditText
                    android:id="@+id/edit_out"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:hint="Incorrect"
                    android:text="@={vm.output1}"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:background="@color/trans"
                    android:minLines="6"
                    android:maxLines="10"
                    android:editable="false"
                    />
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/correct_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="15dp"
            android:padding="20dp"
            app:cardBackgroundColor="@color/blue"
            app:cardCornerRadius="25dp"
            app:layout_constraintTop_toBottomOf="@id/output_card">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/correct_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="5dp"
                    android:textColorHint="@color/white"
                    app:hintTextColor="@color/blue200"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    >
                    <EditText
                        android:id="@+id/edit_corr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="start"
                        android:hint="Correct"
                        android:text="@={vm.output3}"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@color/trans"
                        android:minLines="6"
                        android:maxLines="10"
                        android:editable="false"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <ImageButton
                    android:id="@+id/copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="15dp"
                    android:adjustViewBounds="true"
                    android:background="?attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    android:onClick="@{() -> vm.copy()}"
                    android:src="@drawable/copy" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/btn_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/blue"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Record"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:icon="@drawable/mic"
                app:iconSize="35dp"
                app:iconPadding="15dp"
                app:iconGravity="textTop"
                app:iconTint="@color/white"
                android:outlineSpotShadowColor="@color/trans"
                android:backgroundTint="@color/trans"
                app:layout_constraintTop_toBottomOf="@id/output_card"
                app:layout_constraintBottom_toTopOf="@id/btn_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>