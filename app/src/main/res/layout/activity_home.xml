<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="title"
            type="String" />
        <variable
            name="search"
            type="Boolean" />
        <variable
            name="base"
            type="com.example.alpha_ai.base.BaseViewModel" />
        <variable
            name="vm"
            type="com.example.alpha_ai.ui.home.HomeViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeActivity"
        android:background="@color/white"
        >

        <include
            android:id="@+id/appbar"
            layout="@layout/layout_appbar"
            app:title="@{title}"
            app:vm="@{base}"
            app:logout="@{true}"
            app:search="@{search}"
            app:vs="@{false}" />


        <include
            android:id="@+id/content"
            layout="@layout/content_home"
            />


        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottom_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:backgroundTint="@color/white"
            app:fabCradleMargin="10dp"
            app:fabCradleRoundedCornerRadius="25dp"
            app:fabCradleVerticalOffset="5dp"
            >
            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_nav"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                app:elevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:itemHorizontalTranslationEnabled="true"
                app:menu="@menu/bottom_nav"
                android:background="@color/trans"
                app:itemRippleColor="@color/blue200"
                app:itemIconTint="@color/item_selector_color"
                app:itemTextColor="@color/item_selector_color"
                app:itemTextAppearanceActiveBoldEnabled="true"
                />
        </com.google.android.material.bottomappbar.BottomAppBar>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>