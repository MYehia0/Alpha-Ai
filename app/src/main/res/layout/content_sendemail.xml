<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_sendemail"
    tools:context=".ui.forgetpassword.sendmail.SendEmailActivity"
    >

    <data>
        <variable
            name="vm"
            type="com.example.alpha_ai.ui.forgetpassword.sendmail.SendEmailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/trans"
        android:paddingHorizontal="16dp"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    style="@style/main_text_style"
                    android:id="@+id/main_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forget"
                    android:paddingStart="10dp"
                    />
                <TextView
                    style="@style/main_text_style"
                    android:id="@+id/main_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="password?"
                    android:paddingStart="10dp"
                    />
                <TextView
                    style="@style/welcome_text_style_2"
                    android:id="@+id/welcome_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/text_forget_pass"
                    android:paddingStart="10dp"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/gray100"
                    android:layout_marginVertical="10dp"
                    app:cardCornerRadius="20dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="20dp"
                            android:layout_marginVertical="22dp"
                            android:layout_marginStart="16dp"
                            android:src="@drawable/email"
                            android:adjustViewBounds="true"
                            />
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/email_input_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:textColorHint="@color/black"
                            app:hintTextColor="@color/blue"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            errorText="@{vm.emailError}"
                            >
                            <EditText
                                android:id="@+id/edit_email_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/email_address"
                                android:text="@={vm.email}"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:inputType="textEmailAddress"
                                android:background="@color/trans"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/gray100"
                    android:layout_marginVertical="10dp"
                    app:cardCornerRadius="20dp"
                    >
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    app:cardCornerRadius="20dp"
                    android:backgroundTint="@color/blue100"
                    >
                    <Button
                        android:id="@+id/btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:paddingHorizontal="30dp"
                        android:paddingVertical="8dp"
                        android:gravity="center"
                        android:background="@color/trans"
                        android:onClick="@{() -> vm.send()}"
                        android:text="Send Code"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:textColor="@color/gray100"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>