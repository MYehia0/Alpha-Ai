<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.example.alpha_ai.ui.main.history.search.SearchHistoryViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.main.history.search.SearchHistoryActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/trans"
            app:elevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            >
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:src="@drawable/ic_arrow_back"
                    android:background="@color/trans"
                    android:layoutDirection="rtl"
                    />
<!--                android:onClick="@{()-> vm.navigator.onBack() }"-->

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/blue200"
                    android:paddingVertical="5dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginEnd="12dp"
                    app:cardCornerRadius="12dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/search"
                            />
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/history_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            android:textColorHint="@color/gray200"
                            app:hintTextColor="@color/blue"
                            >
                            <EditText
                                android:id="@+id/edit_history"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Search for history"
                                android:text="@={vm.search}"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:inputType="textAutoComplete"
                                android:background="@color/trans"
                                />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </androidx.appcompat.widget.Toolbar>
                
            </com.google.android.material.appbar.AppBarLayout>
        <FrameLayout
            android:id="@+id/container_history"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/appbar"
            app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>